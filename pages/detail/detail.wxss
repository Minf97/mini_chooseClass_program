.container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}
.title-class {
  font-size: 35rpx;
  color: rgb(89, 128, 106);
  letter-spacing: 5rpx;
  font-weight: 500;
  margin: 25rpx 0;
}
.title-class-info {
  font-weight: 700;
  letter-spacing: 2rpx;
  margin-top: 25rpx;
}
.divider {
  margin: 0 !important;
}
.body {
  position: absolute;
  bottom: 0;
  top: 126px;
  width: 100%;
  min-height: 100%;
  background-color: rgb(244, 249, 245);
}
.btn{
  position: absolute !important;
  bottom: 10rpx;
  left: 50%;
  transform: translate(-50%,0);
  width: 90%;
  background-color: rgb(69, 129, 93) !important;
  border: 0 !important;
}

/* 具体信息 样式 */
.body {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  letter-spacing: 1rpx;
}
.headline {
  font-size: 30rpx;
  font-weight: 700;
}
.subject {
  font-size: 28rpx;
  font-weight: 700;
  margin: 10rpx 0;
}
.content {
  letter-spacing: 2rpx;
  line-height: 52rpx;
}