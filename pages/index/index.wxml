<view class="container">
  <!-- 头部 -->
  <view class="head" style="width: 100%; height: {{statusBarHeight + lineHeight}}px; overflow: hidden;">
    <!-- 状态栏 -->
    <view style="height: {{statusBarHeight}}px;" />
    <!-- 导航栏 -->
    <view class="head_second" style="height: {{lineHeight}}px;" />
  </view>
  <image src="../../images/green.png" mode="aspectFill" class="titleImg"></image>
  <view class="popView">
    <van-tabs active="{{ active }}" bind:change="onChange" tab-class="tabClass">
      <block wx:for="{{label}}" wx:for-item="item" wx:for-index="index" wx:key="*this">
        <van-tab title="{{item.title}}">
          <block wx:for="{{item.children}}" wx:for-item="e" wx:for-index="idx" wx:key="*this">
            <van-cell title="{{e.title}}" custom-class="cellClass" data-index="{{index}}" data-idx="{{idx}}" is-link bindtap="naviTo" border="{{ false }}" />
          </block>
        </van-tab>
      </block>
    </van-tabs>
  </view>
</view>